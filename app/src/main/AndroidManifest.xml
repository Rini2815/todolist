<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.todolist">

    <!-- Permission Notifikasi Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoList">

        <!-- Receiver untuk alarm tugas -->
        <receiver
            android:name=".utils.TaskAlarmReceiver"
            android:exported="false" />

        <!-- Splash -->
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true" />

        <!-- Register -->
        <activity
            android:name=".Activities.RegisterActivity"
            android:exported="true" />

        <!-- Home -->
        <activity
            android:name=".Activities.HomeActivity"
            android:exported="true" />

        <!-- Tambah Tugas -->
        <activity
            android:name=".Activities.AddTaskActivity"
            android:exported="false" />

        <!-- Edit Tugas -->
        <activity
            android:name=".Activities.EditTaskActivity"
            android:exported="false" />

        <!-- Detail Tugas -->
        <activity
            android:name=".Activities.DetailTaskActivity"
            android:exported="false" />

        <!-- Settings -->
        <activity
            android:name=".Activities.SettingsActivity"
            android:exported="false" />

        <!-- Bottom Navigation (Main) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>