<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header dengan tombol back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali"
            app:tint="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Tugas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            android:layout_marginStart="16dp"/>

        <!-- Container Form -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Input Judul -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:padding="4dp">

                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Judul"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:inputType="text"/>
            </LinearLayout>

            <!-- Input Deskripsi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_field"
                android:gravity="top"
                android:padding="4dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/edtDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Deskripsi"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"/>
            </LinearLayout>

            <!-- Toggle Favorit -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Favorit?"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Toggle Pengingat -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengingat?"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Input Tanggal dengan Icon Kalender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/edtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="DD/MM/YYYY"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>

                <ImageView
                    android:id="@+id/btnCalendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_calendar"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Pilih Tanggal"/>
            </LinearLayout>

            <!-- Kalender (tampil ketika diklik) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dateTextAppearance="@style/CalendarDateText"
                    android:weekDayTextAppearance="@style/CalendarWeekText"/>
            </androidx.cardview.widget.CardView>

            <!-- Button Add Card -->
            <Button
                android:id="@+id/btnSaveTask"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add Card"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_dark"
                android:layout_marginTop="32dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>